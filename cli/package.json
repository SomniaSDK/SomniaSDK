{
  "name": "@somnia/cli",
  "version": "1.0.0",
  "description": "Somnia blockchain development CLI with smart contract support",
  "main": "dist/index.js",
  "bin": {
    "somnia": "./dist/index.js"
  },
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js && node dist/index.js",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "somnia",
    "blockchain",
    "cli",
    "ethereum",
    "web3",
    "hardhat"
